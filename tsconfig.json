{
  "compilerOptions": {
    "target": "ES6", // Or another target version that supports ES modules
    "module": "ES6", // Use ESNext or another ES module system like ES6 or ES2020
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // The output directory for compiled JavaScript
    "rootDir": "./src", // The root directory of your TypeScript source files
    "moduleResolution": "node" // Resolve modules using Node.js conventions
  },
  "include": ["src/**/*"]
}

